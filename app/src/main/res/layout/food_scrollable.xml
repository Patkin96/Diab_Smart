<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/p_imageView"
        android:layout_width="128dp"
        android:layout_height="96dp"
        android:background="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/p_view5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#A6000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/p_imageView"
        app:layout_constraintStart_toEndOf="@+id/p_view6"
        app:layout_constraintTop_toTopOf="@+id/p_imageView" />

    <ImageView
        android:id="@+id/p_imageView2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="@+id/p_imageView"
        app:layout_constraintTop_toTopOf="@+id/p_imageView"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <ImageView
        android:id="@+id/p_imageView3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="@+id/p_imageView"
        app:layout_constraintTop_toTopOf="@+id/p_imageView"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <ImageView
        android:id="@+id/p_imageView4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/p_imageView"
        app:layout_constraintStart_toStartOf="@+id/p_imageView"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <ImageView
        android:id="@+id/p_imageView5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/p_imageView"
        app:layout_constraintEnd_toEndOf="@+id/p_imageView"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <View
        android:id="@+id/p_view6"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/p_imageView"
        app:layout_constraintEnd_toEndOf="@+id/p_imageView"
        app:layout_constraintStart_toStartOf="@+id/p_imageView"
        app:layout_constraintTop_toTopOf="@+id/p_imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>